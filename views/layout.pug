doctype html
html(lang="en")
  include includes/head.pug
  include includes/svgPatterns.pug
  //- Deactivate right click
  body(oncontextmenu="return false;")

    //- Wrapper for content and nav
    div.wrapper
      nav(id="sidebar")
        div(id="dismiss")
          i.fa.fas.fa-arrow-left

        div.sidebar-header
          h3 #{page.title}

        ul.list-unstyled.components
          each route in routes
            li.nav-link.p-0(class={active: page.link === route.link})
              a(href=route.link)
                i.fa.fas(class=route.icon)
                |  #{route.title}

      div.p-0(id="content")
        //- Header navbar
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
          button.btn.btn-main(type="button" id="sidebarCollapse")
            i.fa.faw.fas.fa-align-justify
          h4.text-light #{page.title}
          button.btn.btn-main(type="button" id="menuToggle")
            i.fa.faw.fas.fa-ellipsis-v.text-light

        //- Chart content
        div.container.content-container
          div.row.chart-top
            div.col
              block chart-top
          div.row.chart
            div.col.chartCol
              block chart
          div.row.chart-bottom
            div.col
              block chart-bottom

        //- Footer navbar
        include includes/footer.pug

    //- Sidebar overlay
    div.overlay