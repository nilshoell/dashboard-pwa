doctype html
html(lang="en")
  include includes/head.pug
  include includes/svgPatterns.pug
  body(oncontextmenu="return false;")

    //- Wrapper for content and nav
    div.wrapper
      nav(id="sidebar")
        div(id="dismiss")
          i.fa.fas.fa-arrow-left

        div.sidebar-header
          h3 #{route.title}

        ul.list-unstyled.components
          each val in routes
            li.nav-link.p-0(class={active: route.link === val.link})
              a(href=val.link)
                i.fa.fas(class=val.icon)
                |  #{val.title}

      div.p-0(id="content")
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
          button.btn.btn-info(type="button" id="sidebarCollapse")
            i.fa.fas.fa-align-justify
          h4.text-light #{route.title}
          button.btn.btn-info(type="button" id="helpButton")
            i.fa.fas.fa-question-circle.text-light

        div.container.content-container
          div.row.chart-top
            div.col
              block chart-top
          div.row.chart
            div.col.chartCol
              block chart
          div.row.chart-bottom
            div.col
              block chart-bottom

          include includes/footer.pug

    div.overlay